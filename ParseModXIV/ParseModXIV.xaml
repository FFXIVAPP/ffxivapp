                                BorderBrush="#F2FFFFFF"
                                BorderThickness="1,0,1,1"
                                CornerRadius="3"
                                Opacity="0.65" />
                        <Border x:Name="BackgroundChecked"
                                Background="{StaticResource BtnPressFill}"
                                BorderBrush="{StaticResource btnPressBorder}"
                                BorderThickness="1"
                                CornerRadius="3"
                                Opacity="0" />
                        <Border x:Name="BackgoundChecked_Highlight"
                                Margin="1"
