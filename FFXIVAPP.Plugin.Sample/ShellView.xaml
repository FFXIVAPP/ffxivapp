<UserControl x:Class="FFXIVAPP.Plugin.Sample.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:MetroControls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Sample="clr-namespace:FFXIVAPP.Plugin.Sample"
             xmlns:Views="clr-namespace:FFXIVAPP.Plugin.Sample.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.Resources>
        <x:Static x:Key="ShellViewModel"
                  Member="Sample:ShellViewModel.Instance" />
        <x:Static x:Key="PluginViewModel"
                  Member="Sample:PluginViewModel.Instance" />
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot"
          DataContext="{StaticResource ShellViewModel}">
        <TabControl x:Name="ShellViewTC"
                    TabStripPlacement="Right">
            <TabItem x:Name="MainTI">
                <TabItem.Header>
                    <Image Width="20"
                           Height="20"
                           Source="/FFXIVAPP.Plugin.Sample;component/Media/Images/Main.png"
                           ToolTip="{Binding Locale[app_MainToolTip],
                                             Source={StaticResource PluginViewModel}}" />
                </TabItem.Header>
                <Views:MainView x:Name="MainV" />
            </TabItem>
            <TabItem x:Name="SettingsTI">
                <TabItem.Header>
                    <Image Width="20"
                           Height="20"
                           Source="/FFXIVAPP.Plugin.Sample;component/Media/Images/Settings.png"
                           ToolTip="{Binding Locale[app_SettingsToolTip],
                                             Source={StaticResource PluginViewModel}}" />
                </TabItem.Header>
                <Views:SettingsView x:Name="SettingsV" />
            </TabItem>
            <TabItem x:Name="AboutTI">
                <TabItem.Header>
                    <Image Width="20"
                           Height="20"
                           Source="/FFXIVAPP.Plugin.Sample;component/Media/Images/About.png"
                           ToolTip="{Binding Locale[app_AboutToolTip],
                                             Source={StaticResource PluginViewModel}}" />
                </TabItem.Header>
                <Views:AboutView x:Name="AboutV" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
